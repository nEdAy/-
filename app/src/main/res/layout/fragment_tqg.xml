<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/paddingView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tl_tqg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/paddingView"
        android:background="@android:color/white"
        tl:tl_indicator_color="@color/red"
        tl:tl_indicator_corner_radius="5dp"
        tl:tl_indicator_margin_left="2dp"
        tl:tl_indicator_margin_right="2dp"
        tl:tl_indicator_style="BLOCK"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@android:color/white"
        tl:tl_textUnselectColor="@color/text_color" />

    <View
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line_height"
        android:layout_below="@+id/tl_tqg"
        android:background="@color/line_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vpTqgPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv" />
</RelativeLayout>
