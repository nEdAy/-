<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.neday.bomb.view.HeaderLayout
        android:id="@+id/top_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dp"
        android:layout_marginRight="20.0dp"
        android:layout_marginTop="30.0dp">

        <com.neday.bomb.view.ClearEditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="50.0dp"
            android:background="@drawable/bg_edit_text"
            android:drawableLeft="@drawable/ic_nickname"
            android:drawablePadding="8.0dp"
            android:hint="@string/tx_hint_nickname"
            android:maxLength="9"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="@dimen/global_mid_text_size" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_marginLeft="20.0dp"
        android:layout_marginRight="20.0dp"
        android:layout_marginTop="20.0dp"
        android:background="@drawable/global_red_clickable_selector"
        android:enabled="false"
        android:gravity="center"
        android:text="设  置"
        android:textColor="@android:color/white"
        android:textSize="@dimen/global_big_text_size" />


</LinearLayout>
