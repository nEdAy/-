<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.neday.bomb.view.HeaderLayout
        android:id="@+id/top_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_top_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_top_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp" />

    <RelativeLayout
        android:id="@+id/rl_password"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/iv_password_see"
            android:layout_width="wrap_content"
            android:layout_height="50.0dp"
            android:layout_alignRight="@+id/et_password"
            android:gravity="center"
            android:paddingLeft="15.0dp"
            android:paddingRight="15.0dp"
            android:src="@drawable/ic_see_normal" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_edit_text"
            android:drawableLeft="@drawable/ic_key"
            android:drawablePadding="8.0dp"
            android:hint="请设置6~16位登录密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:paddingEnd="15.0dp"
            android:paddingStart="15dp"
            android:textSize="@dimen/global_mid_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sms"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:layout_marginLeft="20.0dp"
        android:layout_marginRight="20.0dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_sms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/tv_sms"
            android:layout_alignRight="@+id/tv_sms"
            android:layout_toLeftOf="@+id/tv_sms"
            android:layout_toStartOf="@+id/tv_sms"
            android:background="@drawable/bg_edit_text"
            android:drawableLeft="@drawable/ic_message"
            android:drawablePadding="8.0dp"
            android:hint="@string/tx_hint_sms"
            android:inputType="number"
            android:maxLength="4"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="@dimen/global_mid_text_size" />

        <TextView
            android:id="@+id/tv_sms"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="5.0dp"
            android:paddingRight="5.0dp"
            android:text=" 获取验证码 "
            android:textColor="@color/label_color" />

        <View
            android:layout_width="1.0dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_sms"
            android:background="@color/line_color" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_invite"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:layout_marginLeft="20.0dp"
        android:layout_marginRight="20.0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edit_text"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="8.0dp"
        android:hint="@string/tx_hint_invite_phone"
        android:inputType="number"
        android:maxLength="11"
        android:maxLines="1"
        android:paddingEnd="15.0dp"
        android:paddingStart="15dp"
        android:textSize="@dimen/global_mid_text_size" />

    <RelativeLayout
        android:id="@+id/rl_agreement"
        android:layout_width="wrap_content"
        android:layout_height="45.0dp">

        <RelativeLayout
            android:id="@+id/rl_agreement_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20.0dp"
            android:paddingRight="5.0dp">

            <ImageView
                android:id="@+id/iv_agreement"
                android:layout_width="18.0dp"
                android:layout_height="18.0dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/check_pressed" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rl_agreement_iv"
            android:gravity="center"
            android:text="我同意《用户使用协议》"
            android:textColor="@color/label_color" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_marginLeft="20.0dp"
        android:layout_marginRight="20.0dp"
        android:background="@drawable/global_red_click_with_corner_selector"
        android:gravity="center"
        android:text="提交注册"
        android:textColor="@android:color/white"
        android:textSize="@dimen/global_big_text_size" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="口袋快爆承诺不会向第三方透露您的个人信息"
        android:textColor="@color/gray" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30.0dp"
            android:layout_marginRight="30.0dp"
            android:src="@drawable/ic_logo_kb" />
    </FrameLayout>


</LinearLayout>
