<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/global_click_selector">

        <LinearLayout
            android:id="@+id/rl_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dp"
            android:layout_marginLeft="15.0dp"
            android:layout_marginRight="15.0dp"
            android:layout_marginTop="8.0dp"
            android:layout_toLeftOf="@+id/tv_creditsHistory_change"
            android:layout_toStartOf="@+id/tv_creditsHistory_change"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_creditsHistory_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="稳健型签到"
                android:textColor="@android:color/black"
                android:textSize="@dimen/global_small_text_size" />

            <TextView
                android:id="@+id/tv_creditsHistory_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dp"
                android:text="@string/tx_time_def"
                android:textColor="@color/label_color"
                android:textSize="@dimen/global_small_text_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_creditsHistory_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="15.0dp"
            android:text="@string/tx_number_def" />

    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/divide_line_height"
        android:background="@color/line_color" />
</LinearLayout>
